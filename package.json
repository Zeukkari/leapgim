{
  "name": "leapgim",
  "author": "Petre Tudor, Timo Aho",
  "license": "GPL-3.0",
  "description": "Leap Motion gesture input mapper",
  "version": "0.1.0",
  "dependencies": {
    "forever": "^0.15.1"
  },
  "scripts": {
    "install": "(cd client; npm install); (cd server; npm install)",
    "forever": "node_modules/forever/bin/forever",
    "start-server": "cd server; npm install; forever start index.js",
    "stop-server": "cd server; forever stop index.js",
    "start-client": "cd client; npm start",
    "start": "npm run start-server; npm run start-client"
  },
  "homepage": "https://github.com/Zeukkari/leapgim",
  "bugs": {
    "url": "https://github.com/Zeukkari/leapgim/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zeukkari/leapgim.git"
  },
  "keywords": [
    "leap",
    "leapmotion",
    "mouse",
    "keyboard",
    "hand gesture"
  ]
}
