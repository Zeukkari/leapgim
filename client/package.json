{
  "name": "leapgim-client",
  "author": "Petre Tudor, Timo Aho",
  "license": "GPL-3.0",
  "description": "Leap Motion gesture input mapper",
  "main": "index.html",
  "scripts": {
    "nw-gyp": "nw-gyp/bin/nw-gyp.js",
    "coffee": "node_modules/coffee-script/bin/coffee",
    "build": "coffee -o lib src/ActionController.coffee",
    "rebuild-robotjs": "( cd node_modules/robotjs; nw-gyp configure rebuild --target=0.12.3 )",
    "rebuild-zmq": "( cd node_modules/zmq && nw-gyp configure rebuild --target=0.12.3 )",
    "install": "npm run rebuild-zmq; npm run rebuild-robotjs; npm run build",
    "nw": "node_modules/nw/bin/nw",
    "start": "coffee -o lib src/ActionController.coffee; nw --enable-transparent-visuals --disable-gpu --force-cpu-draw ."
  },
  "dependencies": {
    "coffee-script": "~1.10.0",
    "nw": "^0.12.3",
    "robotjs": "^0.3.1",
    "yamljs": "^0.2.4",
    "zmq": "^2.13.0"
  },
  "devDependencies": {
    "nw-gyp": "^0.12.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zeukkari/leapgim.git"
  },
  "window": {
    "show":         true,
    "transparent":  true,
    "toolbar":      false,
    "frame":        false
  }
}
